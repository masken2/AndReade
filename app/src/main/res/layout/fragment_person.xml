<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wihie"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/set_bg">

        <ImageView
            android:id="@+id/img_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@mipmap/setting_iv_default"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_person"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/app_below_margin"
            android:text="@string/user_login"
            android:textColor="@color/wihie"
            android:textSize="@dimen/text_size_l" />
    </RelativeLayout>

    <View style="@style/view_sylte" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_show_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/app_setting_margin"
        android:layout_marginRight="@dimen/app_setting_margin"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_great"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/setting_recommendfriends"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/app_setting_margin"
            android:layout_toRightOf="@+id/img_great"
            android:text="@string/user_to_friend"
            android:textColor="@color/set_text"
            android:textSize="@dimen/text_size_m" />
    </RelativeLayout>

    <View
        style="@style/view_sylte"
        android:layout_height="0.5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_show_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/app_setting_margin"
        android:layout_marginRight="@dimen/app_setting_margin"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_bund_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/setting_iv_binding"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/app_setting_margin"
            android:layout_toRightOf="@+id/img_bund_user"
            android:text="@string/user_bund_user"
            android:textColor="@color/set_text"
            android:textSize="@dimen/text_size_m" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/setting_iv_qq_normal"
            android:contentDescription="@null"
            android:scaleType="fitCenter" />
    </RelativeLayout>

    <View
        style="@style/view_sylte"
        android:layout_height="20dp" />

    <RelativeLayout
        android:id="@+id/layout_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_show_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/app_setting_margin"
        android:layout_marginRight="@dimen/app_setting_margin"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/setting_icon_system"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/app_setting_margin"
            android:layout_toRightOf="@+id/img_setting"
            android:text="@string/user_setting"
            android:textColor="@color/set_text"
            android:textSize="@dimen/text_size_m" />
    </RelativeLayout>

    <View
        style="@style/view_sylte"
        android:layout_height="0.5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_show_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/app_setting_margin"
        android:layout_marginRight="@dimen/app_setting_margin"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_abuout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/setting_iv_about"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/app_setting_margin"
            android:layout_toRightOf="@+id/img_abuout"
            android:text="@string/user_about"
            android:textColor="@color/set_text"
            android:textSize="@dimen/text_size_m" />

        <LinearLayout
            android:id="@+id/layout_new_app"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/app_setting_margin"
                android:text="@string/user_find_news"
                android:textColor="@color/find_text"
                android:textSize="@dimen/text_size_m" />

            <ImageButton
                android:id="@+id/btn_more_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/setting_iv_more"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </RelativeLayout>

    <View
        style="@style/view_sylte"
        android:layout_height="0.5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_show_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/app_setting_margin"
        android:layout_marginRight="@dimen/app_setting_margin"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_feack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/setting_feedback"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/app_setting_margin"
            android:layout_toRightOf="@+id/img_feack"
            android:text="@string/user_feack"
            android:textColor="@color/set_text"
            android:textSize="@dimen/text_size_m" />

        <ImageButton
            android:id="@+id/btn_feack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/setting_iv_more"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <View
        style="@style/view_sylte"
        android:layout_height="match_parent" />
</LinearLayout>